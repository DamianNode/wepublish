{
  "name": "@wepublish/frontend",
  "version": "0.0.0",
  "main": "./server.js",
  "module": "./lib/esm/client",
  "license": "MIT",
  "browser": {
    "./client.js": "./lib/esm/client",
    "./common.js": "./lib/esm/common"
  },
  "scripts": {
    "build": "run-s copy-license sync-package-info build:*",
    "build:typescript": "tsc -b ./src/common/tsconfig.json ./src/common/tsconfig.esm.json ./src/client ./src/server",
    "watch": "run-s copy-license sync-package-info watch:*",
    "watch:typescript": "tsc -b ./src/common/tsconfig.json ./src/common/tsconfig.esm.json ./src/client ./src/server --watch",
    "copy-license": "shx cp ../../LICENSE ./",
    "clean": "shx rm -rf ./LICENSE ./lib",
    "prepare": "run-s clean copy:license build sync-package-info",
    "sync-package-info": "node ./../../scripts/syncPackageInfo.js ./src/common/version.ts"
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "fastify": "2.6.0"
  },
  "devDependencies": {
    "@types/node": "^12.0.12",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "typescript": "^3.5.2",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.2"
  }
}
