{
  "private": true,
  "engines": {
    "node": "^10.0.0",
    "yarn": "^1.16.0"
  },
  "scripts": {
    "clean": "run-p clean:**",
    "build": "run-s build:core build:webpack build:react build:example",
    "clean:core": "yarn workspace @wepublish/core clean",
    "build:core": "yarn workspace @wepublish/core build",
    "watch:core": "yarn workspace @wepublish/core watch",
    "clean:react": "yarn workspace @wepublish/react clean",
    "build:react": "yarn workspace @wepublish/react build",
    "watch:react": "yarn workspace @wepublish/react watch",
    "clean:webpack": "yarn workspace @wepublish/webpack clean",
    "build:webpack": "yarn workspace @wepublish/webpack build",
    "watch:webpack": "yarn workspace @wepublish/webpack watch",
    "clean:example": "yarn workspace @wepublish/example clean",
    "build:example": "yarn workspace @wepublish/example build",
    "watch:example": "yarn workspace @wepublish/example watch",
    "start:example": "yarn workspace @wepublish/example start",
    "start:editor-storybook": "yarn workspace @wepublish/editor-storybook start",
    "prettier": "prettier --write '{packages,services}/**/*.{js,ts,tsx,json}'",
    "prettier-check": "prettier --check '{packages,services}/**/*.{js,ts,tsx,json}'"
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "husky": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern '{packages,services}/**/*.{js,ts,tsx,json}'"
    }
  }
}
