{
  "private": true,
  "engines": {
    "node": "^10.0.0",
    "yarn": "^1.16.0"
  },
  "scripts": {
    "clean": "run-p clean:**",
    "build": "run-s --print-label build:core build:api build:webpack build:react build:website build:example-website",
    "watch": "run-p --print-label watch:*",
    "clean:core": "yarn workspace @wepublish/core clean",
    "build:core": "yarn workspace @wepublish/core build",
    "watch:core": "yarn workspace @wepublish/core watch",
    "clean:api": "yarn workspace @wepublish/api clean",
    "build:api": "yarn workspace @wepublish/api build",
    "watch:api": "yarn workspace @wepublish/api watch",
    "clean:api-adapter-karma": "yarn workspace @wepublish/api-adapter-karma clean",
    "build:api-adapter-karma": "yarn workspace @wepublish/api-adapter-karma build",
    "watch:api-adapter-karma": "yarn workspace @wepublish/api-adapter-karma watch",
    "clean:api-adapter-mock": "yarn workspace @wepublish/api-adapter-mock clean",
    "build:api-adapter-mock": "yarn workspace @wepublish/api-adapter-mock build",
    "watch:api-adapter-mock": "yarn workspace @wepublish/api-adapter-mock watch",
    "clean:react": "yarn workspace @wepublish/react clean",
    "build:react": "yarn workspace @wepublish/react build",
    "watch:react": "yarn workspace @wepublish/react watch",
    "clean:website": "yarn workspace @wepublish/website clean",
    "build:website": "yarn workspace @wepublish/website build",
    "watch:website": "yarn workspace @wepublish/website watch",
    "clean:webpack": "yarn workspace @wepublish/webpack clean",
    "build:webpack": "yarn workspace @wepublish/webpack build",
    "watch:webpack": "yarn workspace @wepublish/webpack watch",
    "clean:editor": "yarn workspace @wepublish/editor clean",
    "build:editor": "yarn workspace @wepublish/editor build",
    "watch:editor": "yarn workspace @wepublish/editor watch",
    "clean:example-api": "yarn workspace @wepublish/example-api clean",
    "build:example-api": "yarn workspace @wepublish/example-api build",
    "watch:example-api": "yarn workspace @wepublish/example-api watch",
    "start:example-api": "yarn workspace @wepublish/example-api start",
    "clean:example-editor": "yarn workspace @wepublish/example-editor clean",
    "build:example-editor": "yarn workspace @wepublish/example-editor build",
    "watch:example-editor": "yarn workspace @wepublish/example-editor watch",
    "start:example-editor": "yarn workspace @wepublish/example-editor start",
    "clean:example-website": "yarn workspace @wepublish/example-website clean",
    "build:example-website": "yarn workspace @wepublish/example-website build",
    "watch:example-website": "yarn workspace @wepublish/example-website watch",
    "start:example-website": "yarn workspace @wepublish/example-website start",
    "watch:editor-storybook": "yarn workspace @wepublish/editor-storybook watch",
    "prettier": "prettier --write '{packages,services}/**/*.{js,ts,tsx,json}'",
    "prettier-check": "prettier --check '{packages,services}/**/*.{js,ts,tsx,json}'"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "services/*"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "husky": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern '{examples,packages,services}/**/*.{js,ts,tsx,json}'"
    }
  }
}
