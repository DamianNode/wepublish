{
  "private": true,
  "engines": {
    "node": "^10.0.0",
    "yarn": "^1.16.0"
  },
  "scripts": {
    "clean": "run-p clean:**",
    "build": "run-s build:core build:webpack build:website build:website-service",
    "clean:core": "yarn workspace @wepublish/core clean",
    "build:core": "yarn workspace @wepublish/core build",
    "watch:core": "yarn workspace @wepublish/core watch",
    "clean:website": "yarn workspace @wepublish/website clean",
    "build:website": "yarn workspace @wepublish/website build",
    "watch:website": "yarn workspace @wepublish/website watch",
    "clean:webpack": "yarn workspace @wepublish/webpack clean",
    "build:webpack": "yarn workspace @wepublish/webpack build",
    "watch:webpack": "yarn workspace @wepublish/webpack watch",
    "clean:website-service": "yarn workspace @wepublish/website-service clean",
    "build:website-service": "yarn workspace @wepublish/website-service build",
    "watch:website-service": "yarn workspace @wepublish/website-service watch",
    "start:website-service": "yarn workspace @wepublish/website-service start",
    "start:website-storybook": "yarn workspace @wepublish/website-storybook start",
    "docker-build:website-service": "docker build -f services/website-service/Dockerfile .",
    "prettier": "prettier --write '{packages,services}/**/*.{js,ts,tsx,json}'",
    "prettier-check": "prettier --check '{packages,services}/**/*.{js,ts,tsx,json}'"
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "husky": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern '{packages,services}/**/*.{js,ts,tsx,json}'"
    }
  }
}
