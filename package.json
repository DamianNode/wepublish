{
  "private": true,
  "engines": {
    "node": "^10.0.0",
    "yarn": "^1.16.0"
  },
  "scripts": {
    "build": "run-s build:webpack build:frontend build:frontend-service",
    "build:frontend": "yarn workspace @wepublish/frontend build",
    "watch:frontend": "yarn workspace @wepublish/frontend watch",
    "build:webpack": "yarn workspace @wepublish/webpack build",
    "watch:webpack": "yarn workspace @wepublish/webpack watch",
    "build:frontend-service": "yarn workspace @wepublish/frontend-service build",
    "watch:frontend-service": "yarn workspace @wepublish/frontend-service watch",
    "start:frontend-service": "yarn workspace @wepublish/frontend-service start",
    "start:frontend-storybook": "yarn workspace @wepublish/frontend-storybook start",
    "docker-build:frontend-service": "docker build -f services/frontend-service/Dockerfile .",
    "prettier": "prettier --write '{packages,services}/**/*.{js,ts,tsx,json}'",
    "prettier-check": "prettier --check '{packages,services}/**/*.{js,ts,tsx,json}'"
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "husky": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern '{packages,services}/**/*.{js,ts,tsx,json}'"
    }
  }
}
